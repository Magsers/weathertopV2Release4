{{> menu id="dashboard"}}
<section class="ui inverted purple center aligned middle aligned segment">
   <span class="ui big black text">
    <h1><embed>Member Profile</embed></h1>
    </span>
</section>

<div class="ui two column grid">
  <div class="column">
    <img class="ui image" src="https://cdn.glitch.com/a33a33b6-6b11-4d53-84dc-94c7cc012d9b%2Fvintageinstrument.jpg?v=1628425116208">
  </div>
  <div class="column">
    <h2>Personal Details</h2>
    <p>Name : {{user.firstName}} {{user.lastName}}</p>
    <p>Email Address : {{user.email}}</p>
        
  </div>
</div>

<div class="ui two column grid basic middle aligned segment">
  <div class="column">
    <form name="editprofile" class="ui stacked segment form" action="/update/{{user.id}}"
          onsubmit="return validateForm()" method="POST">
      <h3 class="ui header">Edit Personal Details</h3>
      <div class="two fields">
        <div class="field">
          <label>First Name</label>
          <input placeholder="First Name" type="text" value="{{user.firstName}}" name="firstName">
        </div>
        <div class="field">
          <label>Last Name</label>
          <input placeholder="Last Name" type="text" value="{{user.lastName}}" name="lastName">
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input placeholder="Email" type="text" value="{{user.email}}" name="email" readonly>
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" value="{{user.password}}" name="password" id="password" onkeyup='check();'>
      </div>
      <div class="field">
        <label>Confirm Password</label>
        <input type="password" value="{{user.password}}" name="confirm_password" id="confirm_password"
               onkeyup='check();'>
      </div>
      <p>
        <span id='message'></span>
      </p>
      <button class="ui blue submit button">Save</button>
    </form>
  </div>
  <div class="column">
    <img class="ui image" src="https://cdn.glitch.com/a33a33b6-6b11-4d53-84dc-94c7cc012d9b%2Fvane.jpg?v=1628425092467">
  </div>

  <!-- https://www.w3schools.com/howto/howto_js_validation_empty_input.asp-->
  <script>
      function validateForm() {
          var fname = document.forms["editprofile"]["firstName"].value;
          var lname = document.forms["editprofile"]["lastname"].value;
          var email = document.forms["editprofile"]["email"].value;
          var pword = document.forms["editprofile"]["password"].value;
          if ((fname == "" || fname == null) || (lname == "" || lname == null) || (email == "" || email == null) || (pword == "" || pword == null)) {
              alert("All fields must be filled in");
              return false;
          }
      }

<!-- https://stackoverflow.com/questions/21727317/how-to-check-confirm-password-field-in-form-without-reloading-page/21727518
          var check = function () {
              if (document.getElementById('password').value ==
                  document.getElementById('confirm_password').value) {
                  document.getElementById('message').style.color = 'green';
                  document.getElementById('message').innerHTML = 'Password Matching';
              } else {
                  document.getElementById('message').style.color = 'red';
                  document.getElementById('message').innerHTML = 'Passwords Not Matching';
              }
          }
  </script>
