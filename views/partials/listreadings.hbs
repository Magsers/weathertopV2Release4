<table class="ui table">
  <thead>
    <tr>
       <th>Date / Time</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>WindSpeed</th>
      <th>WindDirection</th>
      <th>Pressure</th>
    </tr>
  </thead>
  <tbody>
     {{#each station.readings}}
    
    <tr>
      <td>
        {{timeStamp}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
       <td>
         <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui tiny red button">Delete Reading</a>
    </td>
    </tr>
     {{/each}}
  </tbody>
</table>